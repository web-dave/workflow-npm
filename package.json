{
    "name": "workflow",
    "version": "1.0.1",
    "private": true,
    "devDependencies": {
        "@songkick/replaceinfiles": "^1.1.4",
        "bower": "^1.7.9",
        "clean-css": "3.4.10",
        "concat-from-list": "^0.1.2",
        "concurrently": "^2.0.0",
        "hashmark": "^3.1.0",
        "istanbul": "^0.4.2",
        "jasmine-core": "~2.3.4",
        "karma": "~0.13.15",
        "karma-chrome-launcher": "^0.2.2",
        "karma-jasmine": "~0.3.6",
        "karma-jasmine-html-reporter": "^0.2.0",
        "karma-phantomjs-launcher": "^1.0.0",
        "karma-phantomjs2-launcher": "^0.3.2",
        "lite-server": "^2.0.2",
        "ng-annotate": "^1.2.1",
        "node-sass": "^3.4.2",
        "phantomjs-html": "^0.1.2",
        "phantomjs-prebuilt": "^2.1.7",
        "postbuild": "^1.0.3",
        "rimraf": "2.5.2",
        "uglify-js": "^2.6.2",
        "wiredep": "^4.0.0",
        "wiredep-cli": "^0.1.0"
    },
    "config": {
        "dist": "dist/*"
    },
    "engines": {
        "node": ">=0.10.0"
    },
    "scripts": {
        "lite": "lite-server",
        "wiredep": "wiredep -d ./bower_components -s ./app/index.html --dependencies true",
        "postbuild": "postbuild -i ./app/index.tpl.html  -o ./app/index.html -c ./app/app -j ./app/app",
        "prestart": "npm run postbuild && npm run wiredep",
        "watch:scss": "node-sass -w --include-path app/scss app/scss/main.scss   app/app/styles/main.css",
        "start": "concurrent \"npm run watch:scss -s\" \"npm run lite\" "
    }
}